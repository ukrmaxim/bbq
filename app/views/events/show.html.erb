<div class="event">
  <div class="event-info row">
    <div class="col-md-10">
      <%= content_tag 'div', '', class: 'event-background',
                      style: "background-image: url(#{asset_pack_path('media/images/event.jpg')})" %>

      <div class="event-info-inner row">
        <div class="col-md-8">
          <div class="event-description">
            <h1><%= @event.title %></h1>
            <h3><%= l @event.datetime, format: :long %></h3>
            <h3><small><%= link_to @event.address,
                                   "https://www.google.com.ua/maps/search/#{@event.address}" %></small></h3>
            <p><%= @event.description %></p>
          </div>

          <% if current_user_can_edit?(@event) %>
            <div class="buffer-top">
              <%= link_to t('edit'), edit_event_path(@event), class: 'btn btn-secondary mb-2' %>
              <%= link_to t('delete'), event_path(@event),
                          method: :delete, data: { confirm: t('are_you_sure') },
                          class: 'btn btn-secondary mb-2' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
