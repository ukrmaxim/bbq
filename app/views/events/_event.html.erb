<%# Паршиал для отображения инфы об отдельном событии %>
<div class="col-sm-10 col-md-12 mx-auto d-block mt-3">
  <div class="thumbnail">
    <%= content_tag 'div', '', class: 'event-background',
                    style: "background-image: url(#{asset_pack_path('media/images/event_thumb.jpg')})" %>
    <div class="thumbnail-inner event-info-inner">
      <div class="caption">
        <div class="event-description text-left">
          <% if current_user_can_edit_event?(event) %>
            <h3><%= link_to event.title, event_path(event) %>
              <small>(<%= t('my_event') %>)</small></h3>
          <% else %>
            <h3><%= link_to event.title, event_path(event) %>
<!--          <small>(<%#= t('organizer') %> <%#= render partial: 'users/user', object: event.user %>)</small></h3>-->
              <small>(<%= t('organizer') %> <%= link_to event.user.name, user_path(event.user) %>)</small></h3>
          <% end %>
          <h3><small><%= l event.datetime, format: :long %></small></h3>
          <div class="buffer-both"><%= event.address %></div>
        </div>
        <div class="event-description text-left">
          <% if event.subscribers.count > 0 %>
          <b><%= t('subscribers') %></b>
          <% event.subscribers.each do |user| %>
            <%= link_to image_tag(user_avatar(user), class: 'img-icon', title: user.name), user_path(user) %>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
