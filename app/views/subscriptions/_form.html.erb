<%= form_for [@event, subscription] do |f| %>
  <%= render partial: 'partials/form_errors', locals: { model: subscription } %>

  <% unless user_signed_in? %>
    <div class="form-group">
      <%= f.text_field :user_name, class: 'form-control', placeholder: t('activerecord.attributes.subscription.user_name') %>
    </div>

    <div class="form-group">
      <%= f.email_field :user_email, class: 'form-control', placeholder: t('activerecord.attributes.subscription.user_email') %>
    </div>
  <% end %>
  <% unless current_user_already_subscriber?(@event) %>
    <div class="actions text-right">
      <%= f.submit t('subscribe'), class: 'btn btn-primary' %>
    </div>
  <% end %>
<% end %>
